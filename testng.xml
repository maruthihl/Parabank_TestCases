<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parabank Test Suite" parallel="tests" thread-count="3">
    
    <test name="Login Test - Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.example.parabank.tests.ParallelExecutionExample"/>
        </classes>
    </test>

    <test name="Login Test - Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.example.parabank.tests.ParallelExecutionExample"/>
        </classes>
    </test>

    <test name="Login Test - Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.example.parabank.tests.ParallelExecutionExample"/>
        </classes>
    </test>

</suite>
